@model AcademiaWeb.Models.Comision

@{
    ViewData["Title"] = "Create";
    

}

<h1>Create</h1>

<h4>Comision</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NroComision" class="control-label"></label>
                <input asp-for="NroComision" class="form-control" />
                <span asp-validation-for="NroComision" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label for="Especialidad">Especialidad</label>
                <div>
                    <select id="idEspecialidad" name="idEspecialidad">
                        <option value="Seleccione una especialidad"></option>
                        @foreach (SelectListItem item in (SelectList)ViewBag.Especialidades)
                        {
                            <option value="@item.Value"> @item.Text </option>
                        }
                    </select>
                </div>
                <span asp-validation-for="Especialidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>


        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
